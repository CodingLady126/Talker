    <ToggleButton
        android:id="@+id/toggle_mic"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/call_mic_toggle_background"
        android:checked="true"
        android:gravity="center_vertical|center_horizontal"
        android:textOff=""
        android:textOn="" />

    <ImageButton
        android:id="@+id/button_hangup_call"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/call_shape_oval_red"
        android:src="@drawable/call_end_white" />



    <ToggleButton
        android:id="@+id/toggle_speaker"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/call_speaker_toggle_background"
        android:checked="true"
        android:textOff=""
        android:textOn=""

        />

    <ImageButton
        android:id="@+id/toggle_block"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/call_block_toggle_background"
        android:checked="true"
        android:gravity="center_vertical|center_horizontal"
        android:textOff=""
        android:textOn="" />

</LinearLayout>