<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentIncomeCall"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_info_about_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="64dp"
        android:paddingRight="64dp">






        <TextView
            android:id="@+id/call_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="3"
            android:maxLines="1"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:text="@string/income_call"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/image_button_reject_call"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/call_selector_call_end"
            android:padding="16dp"
            android:src="@drawable/call_end_white" />

        <ImageButton
            android:id="@+id/image_button_accept_call"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="72dp"
            android:layout_toEndOf="@id/image_button_reject_call"
            android:background="@drawable/call_selector_call_take"
            android:padding="16dp"
            android:src="@drawable/call_phone_answer_white"
            tools:ignore="RtlCompat" />
    </RelativeLayout>
</RelativeLayout>